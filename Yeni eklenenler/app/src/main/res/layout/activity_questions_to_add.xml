<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".QuestionsToAdd"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="16dp"
        tools:ignore="MissingConstraints"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/txtQuestion"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:id="@+id/txtoptA"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txtQuestion"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:id="@+id/txtoptB"
            app:layout_constraintTop_toBottomOf="@+id/txtoptA"
            app:layout_constraintLeft_toRightOf="@+id/txtQuestion"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/txtoptC"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@+id/txtQuestion"
            app:layout_constraintTop_toBottomOf="@+id/txtoptB" />

        <TextView
            android:id="@+id/txtoptD"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@+id/txtQuestion"
            app:layout_constraintTop_toBottomOf="@+id/txtoptC" />

        <TextView
            android:id="@+id/txtanswer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="28dp"
            app:layout_constraintLeft_toRightOf="@+id/txtQuestion"
            app:layout_constraintTop_toBottomOf="@+id/txtoptD" />

        <Button
            android:id="@+id/button_yes"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/txtanswer"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_no"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/txtanswer"
            tools:layout_editor_absoluteX="94dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>