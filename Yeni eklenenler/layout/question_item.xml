<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#EA9090"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#CAF697"
            android:gravity="top|left"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FAFAFA"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/txtoptA"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txtQuestion"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#E6DD89"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FAFAFA"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/txtoptB"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtoptA"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txtQuestion"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#E6DD89"
            android:gravity="center|top"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FAFAFA"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/txtoptC"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtoptB"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txtQuestion"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#E6DD89"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FAFAFA"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/txtoptD"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtoptC"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txtQuestion"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#E6DD89"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FAFAFA"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/txtoptAns"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtoptD"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txtQuestion"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#459A49"
            android:gravity="center"
            android:textColor="#FAFAFA"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtQuestion"
            android:text="Onay" />

        <Button
            android:id="@+id/buttonReject"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtQuestion"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="-13dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/buttonAccept"
            android:text="Ret" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>